<div class="page-header">
  <h1>Queries</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Query</th>
      <th>Time</th>
      <th>Clicks</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @scholar_queries.each do |scholar_query| %>
      <tr>
        <td><%= link_to scholar_query.query_text, scholar_query_path(scholar_query) %></td>
        <td><%= scholar_query.created_at %></td>
        <td><%= scholar_query.query_clicks.count %>
        <td><%= link_to scholar_query.user.name, scholar_query.user %>
        <td><%= link_to 'Destroy', scholar_query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

