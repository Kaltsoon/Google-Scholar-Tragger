<div class="page-header">
	<h1>Log in</h1>
</div>
<% if notice %>
	<div class="alert alert-danger">
		<%= notice %>
	</div>
<% end %>
<%= form_tag "login", method: :post do %>
	<div class="form-group">
		<%= label_tag "Name" %>
		<%= text_field_tag "admin[name]", "", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= label_tag "Password" %>
		<%= password_field_tag "admin[password]", "", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= submit_tag "Log in", class: "btn btn-primary" %>
	</div>
<% end %>
