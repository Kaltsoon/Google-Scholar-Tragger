<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1><%= @user.name %></h1>
</div>
<h2>Download user data</h2>
<%= form_tag "/download_user_data", method: :post do %>
  <%= hidden_field_tag "user_id", @user.id %>
  <div class="checkbox">
    <label>
      Include timing information of the clicks
      <%= check_box_tag "include_timing" %>
    </label>
  </div>
  <%= submit_tag "Download data", class: "btn btn-default" %>
<% end %>
<h2>Url</h2>
<p>
  <%= @user.get_url %>
</p>
<h2><%= pluralize(@user.scholar_queries.count, "Query") %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Query</th>
      <th>Time</th>
      <th>Clicks</th>
    </tr>
  </thead>

  <tbody>
    <% @user.scholar_queries.each do |scholar_query| %>
      <tr>
        <td><%= link_to scholar_query.query_text, scholar_query_path(scholar_query) %></td>
        <td><%= scholar_query.created_at %></td>
        <td><%= scholar_query.query_clicks.count %>
        <td><%= link_to 'Destroy', scholar_query, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


